#:kivy 1.9
<StatusText@Label>:
    size_hint: None, None
    text_size: self.size
    halign: 'right'
    size: 100, 25

<MainFrame>
    TabbedPanel:
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        do_default_tab: False

        StatusTab:
            id: tab_status

        OutsideTab:
            id: tab_outside

    StatusText:
        pos: root.width - 147, root.height - 22
        id: status_host

    StatusText:
        pos: root.width - 147, root.height - 42
        id: status_time

    Button:
        on_press: app.open_settings()
        size_hint: None, None
        size: 40, 40
        pos: root.width - 43, root.height - 44


<StatusTab>:
    text: 'Status'
    Label:
        text: 'Status Tab'

<OutsideTab>:
    text: 'Outside'
    FloatLayout:
        Button:
            size_hint: None, None
            size: 200, 200
            pos_hint: {"x": 0.03, 'top': 0.95}
            text: 'Weather Icon Here'
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 200, 100
            pos_hint: {"x": 0.03, 'top': 0.47}
            Label:
                text: 'Kivy Layouts'
            Label:
                text: 'Are Just'
            Label:
                text: 'Really Odd'