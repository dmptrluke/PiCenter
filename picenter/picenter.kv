#:kivy 1.9

<MainLayout>
    TabbedPanel:
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        do_default_tab: False


        StatusTab:
            id: tab_status

        WeatherTab:
            id: tab_weather


    Label:
        size_hint: None, None
        pos: root.width - 107, root.height - 22
        text_size: self.size
        halign: 'right'
        size: 100, 25
        text: "Nexus"
        id: status_host

    Label:
        size_hint: None, None
        pos: root.width - 107, root.height - 42
        text_size: self.size
        halign: 'right'
        size: 100, 25
        text: "0:00 PM"
        id: status_time

<StatusTab>:
    text: 'Status'
    Label:
        text: 'st'

<WeatherTab>:
    text: 'Weather'
    BoxLayout:
        Label:
            text: 'Weather Tab'
        Button:
            text: 'Button that does nothinggg'
